@article{boulangeat_accounting_2012,
  title = {Accounting for Dispersal and Biotic Interactions to Disentangle the Drivers of Species Distributions and Their Abundances: {{The}} Role of Dispersal and Biotic Interactions in Explaining Species Distributions and Abundances},
